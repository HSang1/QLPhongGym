<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:background="?android:attr/selectableItemBackground"
    tools:context=".datpt_item">

    <!-- Hiển thị ảnh sản phẩm -->
    <ImageView
        android:id="@+id/imgDatPT"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_menu_gallery"
        android:scaleType="centerCrop" />

    <!-- LinearLayout chứa thông tin sản phẩm -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/pTId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PT ID" />

        <TextView
            android:id="@+id/thanhPho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/diaDiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả sả"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày học"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="8dp" />



    </LinearLayout>

    <!-- Các nút Sửa và Xóa -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="center_vertical">

        <!-- Nút Sửa -->
        <Button
            android:id="@+id/btSuaDatPT"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Sửa"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="8dp"/>

        <!-- Nút Xóa -->
        <Button
            android:id="@+id/btXoaDatPT"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Xóa"
            android:textColor="@android:color/holo_red_dark"/>

    </LinearLayout>

</LinearLayout>