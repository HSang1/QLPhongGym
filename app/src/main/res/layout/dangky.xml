<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dangKy">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@drawable/gradient_background"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txtReturn"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-40dp"
                android:drawableStart="@drawable/back_27"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text=" Quay lại"
                android:textColor="@color/black"
                android:textSize="50px" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:srcCompat="@drawable/person_24" />

            <androidx.cardview.widget.CardView
                android:layout_width="364dp"
                android:layout_height="529dp"
                android:layout_marginTop="0dp"
                android:alpha="0.95"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5pt"
                        android:text="ĐĂNG KÝ TÀI KHOẢN"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="470dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="50dp"
                            android:text="Họ và tên"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txtHoVaTen"
                            android:layout_width="333dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="49dp"
                            android:drawableLeft="@drawable/person_24"
                            android:ems="10"
                            android:hint="Nhập họ và tên"
                            android:inputType="text"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="50dp"
                            android:text="Đăng Nhập"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txtTaiKhoan"
                            android:layout_width="333dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="49dp"
                            android:drawableLeft="@drawable/person_24"
                            android:ems="10"
                            android:hint="Nhập Tên Đăng Nhập"
                            android:inputType="text"
                            android:textColor="@color/black" />



                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="50dp"
                            android:text="Mật Khẩu"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txtMK"
                            android:layout_width="333dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="49dp"
                            android:drawableLeft="@drawable/lock_24"
                            android:drawableRight="@drawable/baseline_visibility_off_24"
                            android:ems="10"
                            android:hint="Mật Khẩu"
                            android:inputType="text"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="50dp"
                            android:text="Xác Nhận Mật Khẩu"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txtXacNhanMK"
                            android:layout_width="333dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="49dp"
                            android:drawableLeft="@drawable/lock_24"
                            android:drawableRight="@drawable/baseline_visibility_off_24"
                            android:ems="10"
                            android:hint="Nhập Lại Mật Khẩu"
                            android:inputType="text"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="50dp"
                            android:text="Thành Phố/ Tỉnh"
                            android:textColor="@color/black" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="49dp"
                            android:background="@drawable/spinner_background"
                            android:paddingLeft="10dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="50dp"
                            android:text="Địa Chỉ"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txtDiaChi"
                            android:layout_width="333dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="49dp"
                            android:drawableLeft="@drawable/location_24"
                            android:ems="10"
                            android:hint="Nhập Địa Chỉ"
                            android:inputType="text"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="50dp"
                            android:text="Email"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/txtEmail"
                            android:layout_width="333dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="49dp"
                            android:drawableLeft="@drawable/email_24"
                            android:ems="10"
                            android:hint="Nhập Email"
                            android:inputType="text"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200px"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btDangKy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="3dp"
                                android:backgroundTint="#03A9F4"
                                android:text="Đăng Ký"
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>